FROM golang:1.21-alpine AS builder

WORKDIR /app

COPY /orderapi /
COPY /go.mod /
COPY /go.sum /
COPY /sonar-project.properties /

RUN go build -o orderapi order-api/cmd/main.go

FROM alpine:3.14

WORKDIR /app

COPY --from=builder /app/orderapi .

ENV POSTGRES_DSN=""
ENV API_PORT=""

# Adicionando usuário não-root
RUN adduser -D -u 1001 appuser
USER appuser

CMD ["./orderapi"]
